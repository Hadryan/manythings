{
  "name": "mongodb-processor",
  "author": "",
  "license": "ISC",
  "version": "0.0.1",
  "description": "handles read/write to db",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "srv-mongodb"
  },
  "scripts": {
    "----- // DEFAULT SCRIPTS // -----": "",
    "start:prod": "npm run build && cross-env NODE_ENV=production node index",
    "start:dev": "cross-env NODE_ENV=development nodemon --watch src -e js --watch build/src index.js",
    "build": "cross-env NODE_ENV=production babel src --out-dir build/src",
    "----- // CLEANING SCRIPTS // -----": "",
    "clean:npm": "rm -rf ./node_modules",
    "clean": "rm -rf build",
    "reset": "npm run clean && npm run clean:npm",
    "----- // AUTOMATION SCRIPTS // ----": "",
    "test:e2e": "./node_modules/mocha/bin/mocha ./automation/tests/**/*.test.js --watch automation",
    "state:clean": "./node_modules/mocha/bin/mocha ./automation/state/clean.js",
    "state:demo": "./node_modules/mocha/bin/mocha ./automation/state/demo.js",
    "state:confirm-email": "./node_modules/mocha/bin/mocha ./automation/state/confirm-email.js"
  },
  "eslintConfig": {
    "extends": [
      "@forrestjs/eslint-config-universal"
    ]
  },
  "eslintIgnore": [
    "/.docker-volumes/**/*",
    "/node_modules/**/*",
    "/build/**/*"
  ],
  "babel": {
    "presets": [
      "@forrestjs/babel-preset-universal"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@forrestjs/hooks": "^3.0.5",
    "@forrestjs/service-env": "^3.0.5",
    "@forrestjs/service-express": "^3.0.5",
    "@forrestjs/service-express-cookies": "^3.0.5",
    "@forrestjs/service-express-graphql": "^3.0.5",
    "@forrestjs/service-express-graphql-test": "^3.0.5",
    "@forrestjs/service-hash": "^3.0.5",
    "@forrestjs/service-jwt": "^3.0.5",
    "@forrestjs/service-logger": "^3.0.5",
    "@forrestjs/service-postgres": "^3.0.7",
    "es6-promise": "^4.2.8",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.0",
    "isomorphic-fetch": "^2.2.1",
    "mongodb": "^3.2.7",
    "request-ip": "^2.1.3",
    "uuid": "^3.3.2",
    "uuid-validate": "^0.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@forrestjs/babel-preset-universal": "^3.0.0",
    "@forrestjs/eslint-config-universal": "^3.0.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0"
  }
}
